# Frontend Environment Configuration
# Copy this file to .env.local and update the values

# Application
NEXT_PUBLIC_APP_NAME="SMS Management System"
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_API_URL=http://localhost:3001/api
NEXT_PUBLIC_API_VERSION=v1

# Authentication
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your-nextauth-secret-change-in-production

# OAuth Providers
GOOGLE_CLIENT_ID=your-google-oauth-client-id
GOOGLE_CLIENT_SECRET=your-google-oauth-client-secret

GITHUB_CLIENT_ID=your-github-oauth-client-id
GITHUB_CLIENT_SECRET=your-github-oauth-client-secret

MICROSOFT_CLIENT_ID=your-microsoft-oauth-client-id
MICROSOFT_CLIENT_SECRET=your-microsoft-oauth-client-secret

# Payment Integration
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key
NEXT_PUBLIC_PAYPAL_CLIENT_ID=your-paypal-client-id

# Analytics & Monitoring
NEXT_PUBLIC_GOOGLE_ANALYTICS_ID=G-XXXXXXXXXX
NEXT_PUBLIC_MIXPANEL_TOKEN=your-mixpanel-token
NEXT_PUBLIC_HOTJAR_ID=your-hotjar-id
NEXT_PUBLIC_SENTRY_DSN=your-sentry-dsn

# Maps & Location
NEXT_PUBLIC_GOOGLE_MAPS_API_KEY=your-google-maps-api-key
NEXT_PUBLIC_MAPBOX_ACCESS_TOKEN=your-mapbox-access-token

# Real-time Features
NEXT_PUBLIC_WEBSOCKET_URL=ws://localhost:3001
NEXT_PUBLIC_PUSHER_APP_KEY=your-pusher-app-key
NEXT_PUBLIC_PUSHER_CLUSTER=us2

# Feature Flags
NEXT_PUBLIC_ENABLE_AI_FEATURES=true
NEXT_PUBLIC_ENABLE_ADVANCED_ANALYTICS=true
NEXT_PUBLIC_ENABLE_REAL_TIME_NOTIFICATIONS=true
NEXT_PUBLIC_ENABLE_MOBILE_FEATURES=true
NEXT_PUBLIC_ENABLE_DARK_MODE=true
NEXT_PUBLIC_ENABLE_BETA_FEATURES=false

# CDN & Assets
NEXT_PUBLIC_CDN_URL=https://your-cdn-domain.com
NEXT_PUBLIC_IMAGES_DOMAIN=your-images-domain.com

# API Configuration
NEXT_PUBLIC_API_TIMEOUT=30000
NEXT_PUBLIC_API_RETRY_ATTEMPTS=3
NEXT_PUBLIC_API_CACHE_TTL=300000

# Development
NEXT_PUBLIC_DEBUG=false
NEXT_PUBLIC_MOCK_API=false
NEXT_PUBLIC_SHOW_PERFORMANCE_METRICS=false

# Internationalization
NEXT_PUBLIC_DEFAULT_LOCALE=en
NEXT_PUBLIC_SUPPORTED_LOCALES=en,es,fr,de,it,pt,ja,zh

# Theme & UI
NEXT_PUBLIC_DEFAULT_THEME=light
NEXT_PUBLIC_BRAND_COLOR=#3b82f6
NEXT_PUBLIC_ACCENT_COLOR=#10b981

# Security
NEXT_PUBLIC_CSP_NONCE=your-csp-nonce
NEXT_PUBLIC_RECAPTCHA_SITE_KEY=your-recaptcha-site-key

# Production Overrides (uncomment for production)
# NEXT_PUBLIC_APP_URL=https://your-production-domain.com
# NEXT_PUBLIC_API_URL=https://api.your-production-domain.com/api
# NEXTAUTH_URL=https://your-production-domain.com
# NEXT_PUBLIC_DEBUG=false
# NEXT_PUBLIC_MOCK_API=false
