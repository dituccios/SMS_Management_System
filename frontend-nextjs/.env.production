# Production Environment Configuration
# DO NOT COMMIT THIS FILE - ADD TO .gitignore

# Application
NEXT_PUBLIC_APP_NAME="SMS Management System"
NEXT_PUBLIC_APP_URL=https://your-production-domain.com
NEXT_PUBLIC_API_URL=https://api.your-production-domain.com/api
NEXT_PUBLIC_API_VERSION=v1

# Authentication
NEXTAUTH_URL=https://your-production-domain.com
NEXTAUTH_SECRET=your-strong-nextauth-secret-for-production

# OAuth Providers (Configure with your production credentials)
GOOGLE_CLIENT_ID=your-production-google-oauth-client-id
GOOGLE_CLIENT_SECRET=your-production-google-oauth-client-secret

GITHUB_CLIENT_ID=your-production-github-oauth-client-id
GITHUB_CLIENT_SECRET=your-production-github-oauth-client-secret

MICROSOFT_CLIENT_ID=your-production-microsoft-oauth-client-id
MICROSOFT_CLIENT_SECRET=your-production-microsoft-oauth-client-secret

# Payment Integration (Production keys)
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_live_your_production_stripe_publishable_key
STRIPE_SECRET_KEY=sk_live_your_production_stripe_secret_key
NEXT_PUBLIC_PAYPAL_CLIENT_ID=your-production-paypal-client-id

# Analytics & Monitoring
NEXT_PUBLIC_GOOGLE_ANALYTICS_ID=G-YOUR_PRODUCTION_GA_ID
NEXT_PUBLIC_MIXPANEL_TOKEN=your-production-mixpanel-token
NEXT_PUBLIC_HOTJAR_ID=your-production-hotjar-id
NEXT_PUBLIC_SENTRY_DSN=your-production-sentry-dsn

# Maps & Location
NEXT_PUBLIC_GOOGLE_MAPS_API_KEY=your-production-google-maps-api-key
NEXT_PUBLIC_MAPBOX_ACCESS_TOKEN=your-production-mapbox-access-token

# Real-time Features
NEXT_PUBLIC_WEBSOCKET_URL=wss://api.your-production-domain.com
NEXT_PUBLIC_PUSHER_APP_KEY=your-production-pusher-app-key
NEXT_PUBLIC_PUSHER_CLUSTER=us2

# Feature Flags (Production settings)
NEXT_PUBLIC_ENABLE_AI_FEATURES=true
NEXT_PUBLIC_ENABLE_ADVANCED_ANALYTICS=true
NEXT_PUBLIC_ENABLE_REAL_TIME_NOTIFICATIONS=true
NEXT_PUBLIC_ENABLE_MOBILE_FEATURES=true
NEXT_PUBLIC_ENABLE_DARK_MODE=true
NEXT_PUBLIC_ENABLE_BETA_FEATURES=false

# CDN & Assets
NEXT_PUBLIC_CDN_URL=https://cdn.your-domain.com
NEXT_PUBLIC_IMAGES_DOMAIN=images.your-domain.com

# API Configuration
NEXT_PUBLIC_API_TIMEOUT=30000
NEXT_PUBLIC_API_RETRY_ATTEMPTS=3
NEXT_PUBLIC_API_CACHE_TTL=300000

# Production Settings
NEXT_PUBLIC_DEBUG=false
NEXT_PUBLIC_MOCK_API=false
NEXT_PUBLIC_SHOW_PERFORMANCE_METRICS=false

# Internationalization
NEXT_PUBLIC_DEFAULT_LOCALE=en
NEXT_PUBLIC_SUPPORTED_LOCALES=en,es,fr,de,it,pt,ja,zh

# Theme & UI
NEXT_PUBLIC_DEFAULT_THEME=light
NEXT_PUBLIC_BRAND_COLOR=#3b82f6
NEXT_PUBLIC_ACCENT_COLOR=#10b981

# Security
NEXT_PUBLIC_CSP_NONCE=your-production-csp-nonce
NEXT_PUBLIC_RECAPTCHA_SITE_KEY=your-production-recaptcha-site-key
